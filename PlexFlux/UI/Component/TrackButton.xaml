<UserControl x:Class="PlexFlux.UI.Component.TrackButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlexFlux.UI.Component"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             Height="55" d:DesignWidth="300"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF1F1F1F" />
            <Setter Property="BorderBrush" Value="#FF1F1F1F" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FFCC7B19" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="BorderBrush" Value="#FFCC7B19" />
                    <Setter Property="Background" Value="#66000000" />
                </Trigger>
                <Trigger Property="Tag">
                    <Trigger.Value>
                        <sys:Boolean>True</sys:Boolean>
                    </Trigger.Value>
                    <Setter Property="BorderBrush" Value="#FF2D89EF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Button x:Name="button" Margin="0,0,0,5" Click="Button_Click" KeyDown="button_KeyDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="46"/>
                <ColumnDefinition />
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>

            <!-- Artwork -->
            <Border Margin="3" Background="Black">
                <Image x:Name="imageArtwork" Stretch="Uniform" />
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0,10,0">
                <TextBlock Margin="0,0,0,0"
                           FontSize="17" 
                           Foreground="White" 
                           TextWrapping="Wrap" 
                           LineStackingStrategy="BlockLineHeight"
                           LineHeight="22"
                           MaxHeight="22"
                           TextTrimming="CharacterEllipsis"
                           Text="{Binding Path=Title}"
                           ToolTip="{Binding Path=Title}" />

                <TextBlock Margin="0,1,0,0"
                           FontSize="11"
                           Foreground="#44FFFFFF"
                           TextWrapping="WrapWithOverflow"
                           TextTrimming="CharacterEllipsis"
                           LineStackingStrategy="BlockLineHeight"
                           LineHeight="16"
                           MaxHeight="16"
                           Text="{Binding Path=Artist.Title}"
                           ToolTip="{Binding Path=Artist.Title}" />
            </StackPanel>
            
            <!-- Delete button -->
            <Button Grid.Column="2" Width="14" Height="14" HorizontalAlignment="Left" BorderThickness="0" Click="DeleteButton_Click">
                <Viewbox Stretch="Fill">
                    <Canvas Width="512" Height="512">
